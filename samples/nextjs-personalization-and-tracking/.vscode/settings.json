{
  "files.associations": {
    "*.sicpackage": "json"
  },
  "json.schemas": [
    {
      "fileMatch": ["/sitecore.json"],
      "url": "./.sitecore/schemas/RootConfigurationFile.schema.json"
    },
    {
      "fileMatch": ["/.sitecore/user.json"],
      "url": "./.sitecore/schemas/UserConfiguration.schema.json"
    },
    {
      "fileMatch": ["*.module.json"],
      "url": "./.sitecore/schemas/ModuleFile.schema.json"
    }
  ],
  "mochaExplorer.files": ["src/**/*.test.ts", "src/**/*.test.tsx"],
  "mochaExplorer.require": ["ts-node/register", "tsconfig-paths/register", "./src/tests/shim.ts", "./src/tests/jsdom-setup.ts", "./src/tests/enzyme-setup.ts"],
  "mochaExplorer.env": {
    "TS_NODE_PROJECT": "./tsconfig.scripts.json"
  }
}
