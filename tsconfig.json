{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "newLine": "LF",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "./types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "types",
    "dist",
    "src/customTypes",
    "src/**/*.test.ts",
    "src/testData/*.ts"
  ]
}
